{
  "name": "vibecon",
  "version": "1.0.0",
  "description": "Persistent, isolated Docker containers for running Claude Code and other AI coding assistants safely",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "vibecon": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile vibecon",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "docker",
    "claude",
    "ai",
    "coding-assistant",
    "container"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
